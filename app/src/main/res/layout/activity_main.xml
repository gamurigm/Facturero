<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Logo y encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TU LOGO AQUÍ"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="16dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACTURA\nNº 01234"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Información de contacto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMACIÓN DE CONTACTO"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nombre y Apellido"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Campo para ingresar el nombre y apellido" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Dirección"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Campo para ingresar la dirección" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Teléfono"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:contentDescription="Campo para ingresar el número de teléfono" />

        <!-- Tabla de descripción -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <TableRow
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DESCRIPCIÓN"
                    android:textStyle="bold"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CANTIDAD"
                    android:textStyle="bold"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PRECIO"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </TableRow>
        </TableLayout>

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/btnAddRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir Producto"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnGenerarImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar Imagen de Factura"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>